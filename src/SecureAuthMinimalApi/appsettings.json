{
  "Jwt": {
    "Issuer": "SecureAuthMinimalApi",
    "Audience": "SecureAuthMinimalApiClient",
    "SecretKey": "CHANGE_ME_32_CHARS_MINIMUM__CHANGE_ME_32_CHARS_MINIMUM",
    "AccessTokenMinutes": 1
  },
  "IdToken": {
    "Issuer": "SecureAuthMinimalApi.Id",
    "Audience": "SecureAuthMinimalApiClient",
    "SigningKeyPath": "",
    "IncludeEmail": true,
    "Minutes": 30
  },
  "LoginThrottle": {
    "MaxFailures": 5,
    "LockMinutes": 5
  },
  "Cookie": {
    "RequireSecure": true
  },
  "ConnectionStrings": {
    "Sqlite": "Data Source=auth.db"
  },
  "PasswordPolicy": {
    "MinLength": 12,
    "RequireUpper": false,
    "RequireLower": false,
    "RequireDigit": false,
    "RequireSymbol": false
  },
  "EmailConfirmation": {
    "Required": true
  },
  "UsernamePolicy": {
    "Lowercase": false
  },
  "RememberMe": {
    "Days": 14,
    "SameSite": "Strict",
    "CookieName": "refresh_token",
    "Path": "/refresh"
  },
  "PasswordReset": {
    "ExpirationMinutes": 30,
    "RequireConfirmed": true,
    "IncludeTokenInResponseForTesting": false,
    "RetentionDays": 7
  },
  "Mfa": {
    "ChallengeMinutes": 10,
    "RequireUaMatch": true,
    "RequireIpMatch": false,
    "MaxAttemptsPerChallenge": 3
  },
  "Device": {
    "CookieName": "device_id",
    "SameSite": "Strict",
    "RequireSecure": true,
    "PersistDays": 14,
    "ClearOnLogoutAll": false
  },
  "Session": {
    "IdleMinutes": 30
  },
  "Cleanup": {
    "Enabled": true,
    "IntervalSeconds": 300,
    "BatchSize": 200,
    "MaxIterationsPerRun": 3
  },
  "Tests": {
    "SkipDbInit": false
  },
  "Hosting": {
    "Urls": [ "https://localhost:52899" ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "shared": true,
          "outputTemplate": "{Timestamp:O} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      { "Name": "Console" }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
