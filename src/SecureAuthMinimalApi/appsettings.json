{
  "Jwt": {
    "Issuer": "SecureAuthMinimalApi",
    "Audience": "SecureAuthMinimalApiClient",
    "SecretKey": "CHANGE_ME_32_CHARS_MINIMUM__CHANGE_ME_32_CHARS_MINIMUM",
    "AccessTokenMinutes": 1
  },
  "LoginThrottle": {
    "MaxFailures": 5,
    "LockMinutes": 5
  },
  "Cookie": {
    "RequireSecure": true
  },
  "ConnectionStrings": {
    "Sqlite": "Data Source=auth.db"
  },
  "PasswordPolicy": {
    "MinLength": 12,
    "RequireUpper": false,
    "RequireLower": false,
    "RequireDigit": false,
    "RequireSymbol": false
  },
  "UsernamePolicy": {
    "Lowercase": false
  },
  "RememberMe": {
    "Days": 14,
    "SameSite": "Strict",
    "CookieName": "refresh_token",
    "Path": "/refresh"
  },
  "Tests": {
    "SkipDbInit": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
