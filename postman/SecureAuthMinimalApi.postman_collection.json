{
  "info": {
    "_postman_id": "b1a8d5c0-3f7e-4b9a-a1fa-39c9aa2e3c87",
    "name": "SecureAuthMinimalApi",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register (nuovo utente)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/register", "host": ["{{baseUrl}}"], "path": ["register"] },
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"user_{{uuid}}\", \"password\": \"P@ssw0rd!Long\" }"
        }
      },
      "response": []
    },
    {
      "name": "Register (duplicato atteso 409)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/register", "host": ["{{baseUrl}}"], "path": ["register"] },
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"dup_user\", \"password\": \"P@ssw0rd!Long\" }"
        }
      },
      "response": []
    },
    {
      "name": "Login (demo/demo)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/login", "host": ["{{baseUrl}}"], "path": ["login"] },
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"demo\", \"password\": \"demo\" }"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "let data = {};",
              "try { data = pm.response.json(); } catch (e) {}",
              "if (data.csrfToken) {",
              "  pm.collectionVariables.set('csrfToken', data.csrfToken);",
              "}",
              "// Se vuoi anche il JWT dal cookie, estrailo dal Cookie Jar locale (solo in app desktop).",
              "if (pm.response.headers.has('Set-Cookie')) {",
              "  const cookies = pm.response.headers.get('Set-Cookie');",
              "  const match = /access_token=([^;]+)/.exec(cookies);",
              "  if (match && match[1]) {",
              "    pm.collectionVariables.set('jwt', match[1]);",
              "  }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /me (cookie)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/me", "host": ["{{baseUrl}}"], "path": ["me"] }
      },
      "response": []
    },
    {
      "name": "Logout (cookie + CSRF)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-CSRF-Token", "value": "{{csrfToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/logout", "host": ["{{baseUrl}}"], "path": ["logout"] }
      },
      "response": []
    },
    {
      "name": "Introspect (cookie)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/introspect", "host": ["{{baseUrl}}"], "path": ["introspect"] }
      },
      "response": []
    },
    {
      "name": "Introspect (Bearer)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": { "raw": "{{baseUrl}}/introspect", "host": ["{{baseUrl}}"], "path": ["introspect"] }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://localhost:52899" },
    { "key": "csrfToken", "value": "" },
    { "key": "jwt", "value": "" },
    { "key": "uuid", "value": "123456" }
  ]
}
